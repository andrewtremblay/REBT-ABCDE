#!/usr/bin/env bash
echo 'running appcenter-pre-build.sh'

# Change bundle name of an iOS app for non-production
if [ "$APPCENTER_BRANCH" != "master" ];
then
    plutil -replace CFBundleName -string "\$(PRODUCT_NAME) Beta" $APPCENTER_SOURCE_DIRECTORY/MyApp/Info.plist
fi

# inject latest secrets from env vars
sed -i -e "s/APPCENTER_ANDROID_SECRET/${APPCENTER_ANDROID_SECRET}/g" android/app/src/main/assets/appcenter-config.json
sed -i -e "s/APPCENTER_IOS_SECRET/${APPCENTER_IOS_SECRET}/g" ios/AppCenter-Config.plist